{
  "name": "attr-accept",
  "description": "JavaScript implementation of the \"accept\" attribute for HTML5 <input type=\"file\">",
  "main": "dist/index.js",
  "scripts": {
    "build": "webpack -p",
    "prepublish": "npm run build",
    "pretest": "npm run lint",
    "test": "mocha --compilers js:babel/register --recursive",
    "posttest": "npm run size",
    "test:watch": "npm test -- --watch",
    "lint": "eslint ./src",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "size": "size-limit",
    "size:why": "size-limit --why"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/okonet/attr-accept.git"
  },
  "keywords": [
    "html5",
    "input",
    "tag",
    "attribute",
    "attr",
    "accept",
    "file"
  ],
  "author": "Andrey Okonetchnikov @okonetchnikov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/okonet/attr-accept/issues"
  },
  "homepage": "https://github.com/okonet/attr-accept#readme",
  "devDependencies": {
    "babel": "^5.8.23",
    "babel-core": "5.8.25",
    "babel-eslint": "^4.1.1",
    "babel-loader": "5.3.2",
    "core-js": "1.2.2",
    "cz-conventional-changelog": "^1.2.0",
    "eslint": "^1.3.1",
    "eslint-config-airbnb": "0.0.8",
    "eslint-plugin-react": "^3.3.1",
    "expect": "^1.9.0",
    "mocha": "^2.3.2",
    "semantic-release": "^4.3.5",
    "size-limit": "^0.11.1",
    "webpack": "1.12.2"
  },
  "engines": {
    "node": ">=0.10"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "size-limit": [
    {
      "path": "src/index.js",
      "limit": "2 KB"
    }
  ]
}
