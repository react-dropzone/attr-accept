{
  "name": "attr-accept",
  "description": "JavaScript implementation of the \"accept\" attribute for HTML5 <input type=\"file\">",
  "version": "0.0.0-development",
  "source": "src/index.mjs",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "index.d.ts",
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "parcel build",
    "build:watch": "parcel watch",
    "prepublishOnly": "npm test && npm run build",
    "pretest": "npm run lint",
    "test": "mocha",
    "test:watch": "npm test -- --watch",
    "lint": "eslint src/ test/",
    "precommit": "lint-staged",
    "size": "size-limit"
  },
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/react-dropzone/attr-accept.git"
  },
  "keywords": [
    "html5",
    "input",
    "tag",
    "attribute",
    "attr",
    "accept",
    "file"
  ],
  "author": "Andrey Okonetchnikov @okonetchnikov",
  "contributors": [
    "Andrey Okonetchnikov <andrey@okonet.ru> (http://okonet.ru)",
    "Roland Groza <rolandjitsu@gmail.com>",
    "Rick Markins <rmarkins@gmail.com>"
  ],
  "files": [
    "dist",
    "src",
    "README.md",
    "index.d.ts"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/react-dropzone/attr-accept/issues"
  },
  "homepage": "https://github.com/react-dropzone/attr-accept#readme",
  "devDependencies": {
    "@babel/core": "^7.25.8",
    "@commitlint/cli": "^19.5.0",
    "@eslint/js": "^9.12.0",
    "@size-limit/preset-small-lib": "^11.1.6",
    "browserslist": "^4.24.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.12.0",
    "eslint-plugin-import": "^2.31.0",
    "expect": "^29.7.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "mocha": "^10.7.3",
    "parcel": "^2.12.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.mjs": [
      "eslint --fix"
    ]
  },
  "size-limit": [
    {
      "path": "dist/index.mjs",
      "limit": "2 KB"
    },
    {
      "path": "dist/index.cjs",
      "limit": "2 KB"
    }
  ],
  "browserslist": [
    "defaults and fully supports es6-module",
    "maintained node versions"
  ],
  "targets": {
    "types": false
  },
  "@parcel/resolver-default": {
    "packageExports": true
  }
}
